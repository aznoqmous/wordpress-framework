<div class="resource-item">
    {% if tags %}
        <div class="tags-container">
            <ul class="tags">
                {% for tag in tags %}
                    <li>{{ tag.name }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    {% if image %}
    <figure>
        {{ image | raw }}
    </figure>
    {% endif %}
    <h3>{{ title }}</h3>
    <div class="excerpt">
        {{ excerpt }}
    </div>
    <a class="button" href="{{ resource.getFrontendUrl() }}">
        En savoir plus
    </a>
</div>